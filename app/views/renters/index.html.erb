<h1>Renters</h1>

<table>
<thead>
  <tr>
    <th>Name</th>

    <th colspan="3"></th>
  </tr>
</thead>

<tbody>
  <% @renters.each do |renter| %>
    <tr>
      <td><%= current_renter.name %></td>

      <td><%= link_to 'Show', renter %></td>
      <td><%= link_to 'Edit', edit_renter_path(renter) %></td>
      <td><%= link_to 'Destroy', renter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</tbody>
</table>
<br />

<%= link_to 'New Renter', new_renter_path %>

